#main
  .header
    transform-style preserve-3d
    position fixed
    left 0px
    top 0px
    z-index 10
    width 100%
    height 130px
    .head
      width 100%
      height 40px
      background #f1f1f1
      transition transform 1s
      &.on
        animation on 1s
      .content
        width 1200px
        height 100%
        margin 0 auto
        .left
          float left
          width 175px
          height 100%
          display flex
          justify-content center
          align-items center
          span
            &:nth-child(2)
              color #000
              font-weight bold
          img
            display inline-block
            vertical-align middle
        .nav
          display flex
          float right
          height 100%
          ul
            height 100%
            display flex
            li
              float left
              height 100%
              padding 0 15px
              a
                display flex
                align-items center
                justify-content center
                font-weight bold
                color #000000
                width 100%
                height 100%
                &.active
                  color red

      .nav-search
        width 1200px
        height 90px
        margin 0 auto
        display flex
        align-items center
        div
          float left
        .logo
          width 280px
          height 100%
          display flex
          justify-content center
          align-items center
      .search
        width 600px
        height 38px
        margin-left 100px
        border 2px solid red
        border-radius 5px
        display flex
        align-items center
        position relative
        .iconfont
          color:#999
          position absolute
          left 23px
          top 12px
          font-weight bold
        input
          width 70%
          height 30px
          outline none
          margin-left 60px
          padding 0 30px 0 0
          font-size 15px
        button
          width 20%
          height 100%
          background red
          outline none
          border 1px solid red
          color white
          font-weight bold
      .code
        width 90px
        height 100%
        position relative
        left 125px
        top 0px
        text-align center
        .toggle
          width 0
          height 0
          border-top 8px solid transparent
          border-left 8px solid transparent
          border-right 8px solid transparent
          border-bottom 8px solid white
          position absolute
          left 35px
          top -15px
        img
          width 100%

  .carousel
      width 100%
      height 300px
      margin-top 130px
      .content
        height 300px
        position relative
        .list
          width 180px
          height 302px
          background gray
          position absolute
          left 100px
          top 0px
          z-index 5
          .left
            width 100%
            ul
              li
                height 30px
                a
                  width 100%
                  height 100%
                  display flex
                  justify-content center
                  align-items center
                  color white
                  font-size 16px
                  .icon
                    &.active
                      width 0px
                      height 0px
                      border-bottom 8px solid transparent
                      border-right 8px solid red
                      border-left 8px solid transparent
                      border-top 8px solid transparent
                      position absolute
                      right 0px
                      color white
                  .iconfont
                    position absolute
                    left: 140px;
          .right
            position absolute
            left 180px
            top 0px
            display none
            ul
              li
                height 30px
                width 150px
                text-align center
                line-height 30px
        .loop
          height 300px
          display flex
          ul
            height 300px
            display flex
            li
              width 100%
              height 100%
              img
                height 100%
    .every
      width 100%
      height 654px
      .clean
        width 1200px
        height 634px
        margin 0 auto
        padding: 50px 0 0;
        clear: both;
        .wrap
          p
            color: #3d3838;
            font-weight: 800;
            font-size: 28px;
            font-family: "Microsoft YaHei";
            text-align center
          .title
            margin-top 15px
            position relative
            ul
              display flex
              justify-content center
              align-items center
              li
                padding 0 5px
                font-size 22px
                color #000000
            .more
              position absolute
              right 0px
              top 0px

          .info
            height 345px
            margin-top 20px
            a
              .classinfo
                float: left;
                padding: 10px;
                width: 205px;
                border: 1px solid #eaeaea;
                margin: 0 5px;
                background: #fff;
                cursor: pointer;
                height: 345px;
                img
                  width 210px
                  height 210px
                  margin-left -3px
                h2
                  font-size: 16px;
                  padding: 10px 0;
                  font-weight: 800;
                  color: #000;
                  height: 28px;
                  overflow: hidden;
                  width: 101%;
                  white-space: nowrap;
                  text-overflow: ellipsis;
                .scription
                  color: #929292;
                  padding: 5px 0;
                  overflow: hidden;
                  text-overflow: ellipsis;
                  display: -webkit-box;
                  -webkit-line-clamp: 2;
                  -webkit-box-orient: vertical;
                  word-break: break-all;
                  font-size: 13px;
                  line-height: 18px;
                  height: 58px;
                .price
                  span
                    font-size: 14px;
                    padding: 5px 5px;
                    font-weight: 600;
                    height: 20px;
                    line-height: 20px;
                    color: #fb474f;
                    &:nth-child(1)
                      font-size 20px
                    &:nth-child(3)
                      float: right;
                      padding: 0;
                      width: 76px;
                      height: 24px;
                      line-height: 22px;
                      text-align: center;
                      background: #fb474f;
                      border-radius: 5px;
                      color: #fff;
                      font-size: 14px;




@keyframes on{
  from{
    transform translateY(-130px) rotateX(-90deg)
  }
  to{
    transform translateY(0px) rotateX(0deg)
  }
}
