#shop
  .header
    transform-style preserve-3d
    position fixed
    left 0px
    top 0px
    z-index 10
    width 100%
    height 130px
    .head
      width 100%
      height 40px
      background #f1f1f1
      transition transform 1s
      &.on
        animation on 1s
      .content
        width 1200px
        height 100%
        margin 0 auto
        .left
          float left
          width 175px
          height 100%
          display flex
          justify-content center
          align-items center
          span
            &:nth-child(2)
              color #000
              font-weight bold
          img
            display inline-block
            vertical-align middle
        .nav
          display flex
          float right
          height 100%
          ul
            height 100%
            display flex
            li
              float left
              height 100%
              padding 0 15px
              a
                display flex
                align-items center
                justify-content center
                font-weight bold
                color #000000
                width 100%
                height 100%
                &.active
                  color red

      .nav-search
        width 1200px
        height 90px
        margin 0 auto
        display flex
        align-items center
        div
          float left
        .logo
          width 280px
          height 100%
          display flex
          justify-content center
          align-items center
      .search
        width 600px
        height 38px
        margin-left 100px
        border 2px solid red
        border-radius 5px
        display flex
        align-items center
        position relative
        .iconfont
          color:#999
          position absolute
          left 23px
          top 12px
          font-weight bold
        input
          width 70%
          height 30px
          outline none
          margin-left 60px
          padding 0 30px 0 0
          font-size 15px
        button
          width 20%
          height 100%
          background red
          outline none
          border 1px solid red
          color white
          font-weight bold
      .code
        width 90px
        height 100%
        position relative
        left 125px
        top 0px
        text-align center
        .toggle
          width 0
          height 0
          border-top 8px solid transparent
          border-left 8px solid transparent
          border-right 8px solid transparent
          border-bottom 8px solid white
          position absolute
          left 35px
          top -15px
        img
          width 100%




  .serve
    margin-top 130px
    background gainsboro
    .container
      width 1200px
      margin 0 auto
      h2
        line-height: 85px;
        width: 1200px;
        margin: 0 auto;
        font-size: 18px;
      .shops
        width: 970px;
        float: left;
        margin-bottom: 50px;
        ul
          overflow hidden
          li
            box-sizing border-box
            width: 232px;
            height: 300px;
            border: 1px solid #eaeaea;
            padding: 10px;
            float: left;
            margin-right: 10px;
            margin-bottom: 10px;
            background: #fff;
            cursor: pointer;
            a
              img
                vertical-align middle
                width: 210px;
                height: 210px;
              .title
                margin-top: 15px;
                height: 26px;
                line-height: 26px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                img
                  margin-right: 6px;
                  margin-bottom: 5px;
                  vertical-align: middle;
                  width: 18px;
                  height: 17px;
                span
                  font-size: 16px;
                  margin-left: 0.1rem;
                  font-weight: 700;
                  color #000000


              .ticket
                height: 26px;
                line-height: 26px;
                margin: 0;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                margin-top 10px
                .left
                  float left
                  font-size: 12px;
                  color: #929292;
                .right
                  float right
                  font-size: 12px;
                  color: #929292;


  .serveList
    width: 100%;
    margin: 0 auto;
    height: 152px;
    clear: both;
    text-align: center;
    .btn
      width: 200px;
      height: 50px;
      line-height: 50px;
      border: 1px solid #e5e5e5;
      border-radius: 5px;
      margin: 50px 5px;
      background: #fff;
      display: inline-block;
      font-size: 16px;
      color: #b1b1b1;
      cursor: pointer;
  .baozhang
    width 100%
    .container
      width 1200px
      background pink
      margin 0 auto
      h2
        font-size: 30px;
        font-family: "微软雅黑";
        font-weight: 800;
        text-align center
        span
          color: #fb474f;
          font-weight bold


      p
        font-size: 22px;
        color: #3d3838;
        margin: 0;
        text-align center
        padding 10px 0px
      .xuanze
        width: 100%;
        padding-top: 20px;
        background: #fff;
        height: 66px;
        font-family: "微软雅黑"
        ul
          display flex
          justify-content: center;
          li
            width: 12%;
            text-align: center;
            color: #1d1515;
            font-size: 18px;
            img
              display inline-block
              vertical-align middle
  .citys
    width: 100%;
    clear: both;
    padding-top: 50px;
    height: 170px;
    background: #fff;
    dl
      width: 1200px;
      margin: 0 auto;
      dt
        float: left;
        font-family: " 微软雅黑";
        font-size: 18px;
      dd
        margin-left: 30px;
        width: 1090px;
        line-height: 30px;
        float: left;
        a
          font-size: 16px;
          color: #898989;
          display: inline-block;
          width: 9%;
          text-align: center;
          font-weight: 200;
          cursor: pointer;
          font-family: "微软雅黑";
  .footer
    height: 40px;
    line-height: 40px;
    padding-top: 0;
    p

      width: 1200px;
      margin: 0 auto;
      text-align: left;
@keyframes on{
  from{
    transform translateY(-130px) rotateX(-90deg)
  }
  to{
    transform translateY(0px) rotateX(0deg)
  }
}